<div class="container">
  <h1>All our flats (<%= Flat.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="card m-3" style="width: 18rem;">
        <%= image_tag "#{flat.picture_url}" %>
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <div class="d-flex align-items-center">
            <i class="fa-solid fa-people-line ms-3"></i>
            <p class="mb-0"><%= flat.number_of_guests %></p>
            <i class="fa-solid fa-euro-sign ms-3"></i>
            <p class="mb-0"><%= flat.price_per_night %></p>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <%= link_to "Details", flat, class:"btn btn-dark" %>
            <%= link_to "Edit", edit_flat_path(flat), class:"btn btn-warning" %>
            <%= link_to "Remove", flat_path(flat), class:"btn btn-danger",data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
